#include<iostream>
#include<cstring>
using namespace std;

int main()
{
	char l[50], q;
	int a,b;
	
	cout << "Enter the array: ";
	cin >> l;
	int size = strlen(l);
	
	
	cout <<"The reverse of the array: ";
	for (a = 0; a < size; a++)
	
	for (b = a + 1; b < size; b++)
{
			if (l[a] > l[b])             
	{
	q = l[a];                
	l[a] = l[b];
	l[b] = q;
	}
}
	 

	for(a = 0; a < size; a++)
	cout << l[a];
	cout << "\n";
	cout << "The length of the array is: " << strlen(l) + 1;



return 0;
}
